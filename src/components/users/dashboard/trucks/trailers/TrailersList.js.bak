import React, { Component } from "react";

class TrailersList extends Component {
    constructor(props) {
        super(props);

        this.state = {
            Trailers: null
        };
    }

    render() {
        return (
            <section>
                <ol class="list-items">
                    @foreach (Event gurdwaraEvent in Model)
    {
                        <li class="list-items-row">
                            <div data-toggle="collapse" aria-expanded="false" data-target="#@gurdwaraEvent.Id">
                                <div class="row">
                                    <div class="col-md-2">
                                        <i class="glyph glyph-add"></i>
                                        <i class="glyph glyph-remove"></i>
                                        <strong>@gurdwaraEvent.Id</strong>
                                    </div>
                                    <div class="col-md-2">
                                        <img src="./images/fireworks.png" height="50" />
                                    </div>
                                    <div class="col-md-6">
                                        <span style="font-weight: bold">Maximum Weight (GVM):</span> 
                                    </div>
                                    <div class="col-md-6">
                                        <span style="font-weight: bold">@Html.DisplayNameFor(model => model.Subtitle):</span> @gurdwaraEvent.Subtitle
                    </div>
                                    <div class="col-md-6">
                                        <span style="font-weight: bold">@Html.DisplayNameFor(model => model.EventDate):</span> @gurdwaraEvent.EventDate.ToLongDateString()
                    </div>
                                </div>
                            </div>

                            <div class="collapse" id="@gurdwaraEvent.Id">
                                <div class="row">
                                    <div class="col-md-18 col-md-offset-2">
                                        <span style="font-weight: bold">@Html.DisplayNameFor(model => model.Description):</span> @gurdwaraEvent.Description
                    </div>
                                    <div class="col-md-4 text-right">
                                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@gurdwaraEvent.Id">Edit</a>
                                        <button type="button" class="btn btn-danger">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </li>
                    }
                </ol>
            </section>         
        );
    }
};

export default TrailersList;